}

.map-container {
  width: 100%;
  height: 270rpx;
  border-radius: 0rpx;
  background-color: royalblue;
  color: white;
  font-size: 80rpx;
}

.swiper-image {
  width: 100%;
  height: 100vh;
}

.map-container-button {
  width: 100%;
  height: 250rpx;
  border-radius: 0rpx;
  background-color: royalblue;
  color: white;
  font-size: 80rpx;
  padding-top: 45rpx;
}

.knowledge-container {
  width: 60%;
  height: 220rpx;
  border-radius: 0rpx;
  background-color: green;
}

.knowledge-container-button {
  width: 100%;
  height: 220rpx;
  border-radius: 0rpx;
  background-color: green;
  color: white;
  font-size: 80rpx;
}

.poem-container {
  width: 100%;
  height: 30vh;
  border-radius: 0rpx;
  color: rgb(1, 0, 2);
  position: absolute;
  left: 0vw;
  top: 73.5vh;
  font-family: KaiTi;
  font-size: 45rpx;
}

.about-container {
  width: 100%;
  height: 30vh;
  border-radius: 0rpx;
  background-color: #fff;
  filter: alpha(opacity=0.7);
  opacity: 0.5;
  position: absolute;
  left: 0vw;
  top: 70vh;
}

.leftright-container {
  display: flex;
}

.main-container {
  width: 100vw;
  height: 100vh;
  margin: 0 auto;
  position: relative;
}

.weui-footer {
  color: rgba(0, 0, 0, 0.3);
  font-size: 14px;
  line-height: 1.4;
  text-align: center;
}

.weui-footer_fixed-bottom {
  position: fixed;
  bottom: 16px;
  bottom: calc(16px + constant(safe-area-inset-bottom));
  bottom: calc(16px + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
}

.weui-footer__links {
  font-size: 0;
}

.weui-footer__link {
  display: inline-block;
  vertical-align: top;
  margin: 0 8px;
  position: relative;
  font-size: 14px;
  color: #576b95;
}

.weui-footer__link:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1rpx solid #c7c7c7;
  color: #c7c7c7;
  left: -8px;
  top: 0.36em;
  bottom: 0.36em;
}

.weui-footer__link:first-child:before {
  display: none;
}

.weui-footer__text {
  padding: 0 0.34em;
  font-size: 12px;
}
