<view class="page">
  <view class="show-image">
    <canvas bindtap="onCanvas" class="in-class" canvas-id="myCanvas" style="height:450px" />
  </view>
  <view style="padding-top:35vh;padding-bottom:10px;">
    <wux-pagination current="{{ current }}" total="{{ amount }}" mode="button" simple controlled bind:change="onChange">
      <view slot="prev">{{'←'}}</view>
      <view slot="next">{{'→'}}</view>
    </wux-pagination>
  </view>
  <view class="page__bd">
    <wux-tabs wux-class="bordered" controlled current="{{ key }}" bindchange="onTabsChange">
      <block wx:for="{{ results }}" wx:key="key">
        <wux-tab key="{{ item.key }}" title="{{ item.key }}"></wux-tab>
      </block>
    </wux-tabs>
    <swiper current="{{ index }}" bindchange="onSwiperChange" style="height:33vh;background-color:white;">
      <block wx:for="{{ results }}" wx:key="key">
        <swiper-item>
          <view class="result">
            <image class="result-image" src="{{ item.pic }}" />
            <view class="result-text">
              <view class="page__title" style="font-size:22px;">{{ item.key }}</view>
              <view class="page__title" style="font-size:16px;">{{ item.nameEN }}</view>
              <view class="page__title" style="font-size:16px;">
                识别置信率 : {{ item.probability }}%
              </view>
              <navigator url="/pages/showdetail/showdetail?showId={{ item.key }}" style="margin:10px 10px;color:#4FCD5F;text-align:center;">
                查看详情
              </navigator>
              <navigator bindtap="upload" id="{{ item.key }}" url="javascript:void();" style="margin:10px 10px;color:#4FCD5F;text-align:center;">
                确认是该鸟种
              </navigator>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
    <a bindtap="onCorrect" class="weui-btn weui-btn_warn" style="width:100%">以上都不是?点此反馈正确鸟种!</a>
  </view>
  <view class="fadeIn {{hideToast ? 'fadeOut' : ''}}" wx:if="{{toast}}">
    <view class="weui-mask_transparent"></view>
    <view class="weui-toast" style="margin-top:30vh">
      <i class="weui-icon-success-no-circle weui-icon_toast"></i>
      <view class="weui-toast__content">反馈成功</view>
    </view>
  </view>
</view>