<view class="page">
  <view class="page__hd">
    <view class="show-image">
      <image class="in-class" src="{{imageURL}}" mode="aspectFit" />
    </view>
  </view>

  <view class="page__bd">

    <view class="container" style="padding-top:31vh;">
      <view class="divLine">
      </view>
    </view>

    <wux-tabs wux-class="bordered" controlled current="{{ key }}" bindchange="onTabsChange">
      <block wx:for="{{ results }}" wx:key="key">
        <wux-tab key="{{ item.key }}" title="{{ item.key }}"></wux-tab>
      </block>
    </wux-tabs>
    <swiper current="{{ index }}" bindchange="onSwiperChange" style="height:45vh;background-color:white;">
      <block wx:for="{{ results }}" wx:key="key">
        <swiper-item>
          <view class="result">

            <image class="result-image" src="{{ item.pic }}" />

            <view class="result-text">
              <view class="page__desc">中文名: </view>
              <view class="page__title">{{ item.key }}</view>

              <view class="page__desc">英文名: </view>
              <view class="page__title">{{ item.nameEN }}</view>

              <view class="page__desc">识别置信率: </view>
              <view class="page__title">{{ item.probability }}</view>

              <navigator url="/pages/showdetail/showdetail?showId={{ item.key }}" style="margin:10px 10px;">点击查看详情</navigator>
            </view>

          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>