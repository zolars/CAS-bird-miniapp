/* pages/aboutUs/aboutUs.wxss */

.main-container {
  width: 100vw;
  height: 100vh;
  margin: 0 auto;
  position: relative;
}

.image-container {
  width: 100%;
  height: 100vh;
  position: fixed;
}

.bg-image {
  width: 100%;
  height: 100vh;
}

.about-container {
  width: 100vw;
  height: 100vh;
  border-radius: 0rpx;
  background-color: #fff;
  filter: alpha(opacity=0.7);
  opacity: 0.5;
  position: absolute;
  left: 0vw;
  top: 0vh;
}

.about-grid-main {
  width: 70vw;
  padding-top: 3vh;
  padding-bottom: 3vh;
  margin-top: 20vh;
  margin-left: 15vw;
  border-radius: 10px;
  background: #afcffb;
  /* -webkit-box-shadow: 5px 7px 23px 0px rgba(58, 52, 82, 0.16);
  -moz-box-shadow: 5px 7px 23px 0px rgba(58, 52, 82, 0.16); */
  box-shadow: 5px 7px 23px 0px rgba(58, 52, 82, 0.16);
  position: absolute;
}

.page__title {
  text-align: center;
  font-family: KaiTi;
  font-size: 45rpx;
  font-weight: 600;
}

.length-image-0 {
  z-index: 2000;
  width: 10vw;
  height: 20vh;
  margin-left: 45vw;
  margin-top: 40vh;
  position: absolute;
}

.length-image-1 {
  z-index: 2000;
  width: 20vw;
  height: 40vh;
  margin-left: 40vw;
  margin-top: 20vh;
  position: absolute;
}

.length-image-2 {
  z-index: 2000;
  width: 40vw;
  height: 60vh;
  margin-left: 30vw;
  margin-top: 0vh;
  position: absolute;
}

.length-image-3 {
  z-index: 2000;
  width: 35vw;
  height: 60vh;
  margin-left: 32.5vw;
  margin-top: 0vh;
  position: absolute;
}

.slider-text {
  width: 80vw;
  margin-top: 5vh;
  margin-bottom: 5vh;
  text-align: center;
  font-family: KaiTi;
  font-size: 30rpx;
  font-weight: 500;
  position: absolute;
}

.slider {
  margin-top: 60vh;
  margin-left: 10vw;
  width: 80vw;
  position: absolute;
}
