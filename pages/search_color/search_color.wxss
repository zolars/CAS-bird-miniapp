/* pages/aboutUs/aboutUs.wxss */

.main-container {
  width: 100vw;
  height: 100vh;
  margin: 0 auto;
  position: relative;
}

.image-container {
  width: 100%;
  height: 100vh;
  position: fixed;
}

.bg-image {
  width: 100%;
  height: 100vh;
}

.about-container {
  width: 100vw;
  height: 100vh;
  border-radius: 0rpx;
  background-color: #fff;
  filter: alpha(opacity=0.7);
  opacity: 0.5;
  position: absolute;
  left: 0vw;
  top: 0vh;
}

.about-grid-main {
  width: 70vw;
  padding-top: 3vh;
  padding-bottom: 3vh;
  margin-top: 20vh;
  margin-left: 15vw;
  border-radius: 10px;
  background: #afcffb80;
  /* -webkit-box-shadow: 9px 9px 26px 0px rgba(58, 52, 82, 0.26);
  -moz-box-shadow: 9px 9px 26px 0px rgba(58, 52, 82, 0.26); */
  box-shadow: 9px 9px 26px 0px rgba(58, 52, 82, 0.26);
  position: absolute;
}

.page__title {
  text-align: center;
  font-family: KaiTi;
  font-size: 45rpx;
  font-weight: 500;
}

.canvas-text {
  width: 100vw;
  margin-top: 33vh;
  margin-bottom: 5vh;
  text-align: center;
  font-family: KaiTi;
  font-size: 30rpx;
  font-weight: 500;
  position: absolute;
}

.color-canvas {
  margin-top: 35vh;
  width: 100vw;
  height: 35vh;
  position: absolute;
}
