/* pages/aboutUs/aboutUs.wxss */
@import "../../weui.wxss";

.main-container {
  width: 100vw;
  height: 100vh;
  margin: 0 auto;
  position: relative;
}

.image-container {
  width: 100%;
  height: 100vh;
  position: fixed;
}

.bg-image {
  width: 100%;
  height: 100vh;
}

.result-container {
  margin-top: 40vh;
  position: absolute;
}

.about-grid-main {
  width: 70vw;
  padding-top: 3vh;
  padding-bottom: 3vh;
  margin-top: 20vh;
  margin-left: 15vw;
  border-radius: 10px;
  background: #afcffb80;
  /* -webkit-box-shadow: 9px 9px 26px 0px rgba(58, 52, 82, 0.26);
  -moz-box-shadow: 9px 9px 26px 0px rgba(58, 52, 82, 0.26); */
  box-shadow: 9px 9px 26px 0px rgba(58, 52, 82, 0.26);
  position: absolute;
}

.page__bd {
  width: 100vw;
}

.page__title {
  text-align: center;
  font-family: KaiTi;
  font-size: 45rpx;
  font-weight: 500;
}

.page__text {
  text-align: center;
  font-family: KaiTi;
  font-size: 35rpx;
  font-weight: 400;
}
