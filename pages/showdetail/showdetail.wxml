<!-- pages/showdetail/showdetail.wxml -->
<view class="layout_horizontal">
  <view>
    <image class="show-image" src="{{pic}}" mode="aspectFit"></image>
  </view>
</view>
<view class="weui-panel">
  <view class="weui-panel__hd">基本信息</view>
  <view class="weui-panel__bd" wx:for="{{birdInfoMap.newattrs}}" wx:for-index="key">
    <view class="weui-media-box weui-media-box_text">
      <h4 class="weui-media-box__title">{{key}}</h4>
      <view class="weui-media-box__desc" style="color:rgb(0,0,0,50%); -webkit-line-clamp:30;">
        {{item}}
      </view>
    </view>
  </view>
</view>
<view class="weui-panel">
  <view class="weui-panel__hd">更多知识</view>
  <view class="weui-panel__bd" wx:for="{{birdInfoMap.attrs}}" wx:for-index="key">
    <view class="weui-media-box weui-media-box_text">
      <h4 class="weui-media-box__title">{{key}}</h4>
      <view class="weui-media-box__desc" style="color:rgb(0,0,0,50%); -webkit-line-clamp:30;">
        {{item}}
      </view>
    </view>
  </view>
</view>
<view class="weui-footer" style="margin: 3vh 0 0 0;">
  <view class="weui-footer__text">数据来源：中科院地理所</view>
</view>