<!-- pages/takepicture/takepicture.wxml -->
<view class="page-body">
  <view class="page-body-wrapper">
    <camera device-position="back" flash="off" binderror="error" style="width: 100%; height: 300px;"></camera>
    <view class="btn-area">
      <button type="primary" bindtap="takePhoto">拍照</button>
    </view>
    <view class="preview-tips"></view>
    <image wx:if="{{src}}" mode="widthFix" src="{{src}}"></image>
  </view>
</view>
<view class="show">
  <view class="show-container">
    <image class='show-image' src="{{resultAindex}}"></image>
  </view>
  <view class="show-container">
    <text class='show-title' bindtap='showdetailButton'>{{resultAnameCHS}} \n {{resultAname}}</text>
  </view>
</view>
<view class="show-container">
  <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>
  <text class='show-content'>可信度{{resultArate}}%</text>
</view>
